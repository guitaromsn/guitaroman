# ZATCA Scrap Business App - Environment Variables Template
# Copy this file to .env and configure your settings

# AI Integration (Optional)
# Get your API key from Google AI Studio: https://makersuite.google.com/
REACT_APP_GEMINI_API_KEY=your_gemini_api_key_here

# App Configuration
REACT_APP_NAME=ZATCA Scrap Business App
REACT_APP_VERSION=1.0.0

# Development Settings
REACT_APP_ENV=development
REACT_APP_DEBUG=true

# Database Configuration (Already configured in src/db.js)
# These are included for reference but not used directly
DB_SERVER=roman-zatca-server.database.windows.net
DB_DATABASE=InvoiceMakerPro
DB_USER=rh7
DB_PASSWORD=Whyme7121$

# Company Default Settings (Optional - can be set in Settings UI)
REACT_APP_DEFAULT_COMPANY_NAME=Scrap Metal Trading Co.
REACT_APP_DEFAULT_VAT_NUMBER=300000000000003
REACT_APP_DEFAULT_CR_NUMBER=1234567890

# Regional Settings
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_DEFAULT_CURRENCY=SAR
