# Features Toggle (Optional)
REACT_APP_ENABLE_AI=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_CLOUD_SYNC=true

# Security (Optional)
REACT_APP_ENABLE_ENCRYPTION=false
REACT_APP_SESSION_TIMEOUT=3600
