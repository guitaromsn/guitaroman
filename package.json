{
  "name": "zatca-scrap-business-app",
  "version": "1.0.0",
  "description": "ZATCA-compliant desktop business app for scrap metal market in Saudi Arabia",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "keywords": [
    "zatca",
    "saudi arabia",
    "scrap metal",
    "electron",
    "react",
    "business app",
    "invoice"
  ],
  "author": "Roman - Senior Developer",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.14",
    "date-fns": "^2.30.0",
    "electron": "^28.0.0",
    "electron-store": "^8.1.0",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "i18next": "^22.4.10",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.263.1",
    "mssql": "^10.0.1",
    "postcss": "^8.4.21",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.1.5",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.zatca.scrapbusiness",
    "productName": "ZATCA Scrap Business App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "electron-store.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
